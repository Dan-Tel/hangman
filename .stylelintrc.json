{
  "plugins": ["stylelint-order", "stylelint-scss", "stylelint-prettier"],
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-standard-scss",
    "stylelint-config-idiomatic-order",
    "stylelint-prettier/recommended"
